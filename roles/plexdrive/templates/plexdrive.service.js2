# /etc/systemd/system/plexdrive.service

[Unit]
Description=Plexdrive
After=network-online.target mongodb.service

[Service]
User={{user}}
Group={{user}}
Type=simple
ExecStart=/usr/sbin/plexdrive -v 3 --refresh-interval=1m --chunk-size=16m --clear-chunk-age=2h --fuse-options=allow_other,read_only --config=/opt/plexdrive --temp=/opt/plexdrive /mnt/plexdrive
ExecStop=/bin/fusermount -uz /mnt/plexdrive
Restart=always
RestartSec=5

[Install]
WantedBy=default.target
