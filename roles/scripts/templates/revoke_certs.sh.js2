domain={{domain}}

cd /opt/nginx-proxy

sudo docker stop $(docker ps -aq)

for i in *.${domain}.chain.pem;
  do
    base=${i%%??????????}
    sudo certbot revoke -n --cert-path ${base}/fullchain.pem --key-path ${base}/key.pem
done

sudo chown -R {{user}}:{{user}} /opt/nginx-proxy
